@code
{
    string programName;
    string version;
    string author;

    protected override void OnInitialized()
    {
        programName = System.Reflection.Assembly.GetExecutingAssembly().GetName().Name;
        version = System.Reflection.Assembly.GetExecutingAssembly().GetName().Version.ToString();
        author = (System.Reflection.Assembly.GetExecutingAssembly().GetCustomAttributes(typeof(AssemblyCompanyAttribute), false)[0] as AssemblyCompanyAttribute)?.Company;
    }
}