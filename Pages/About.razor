@page "/about"
@using System.Reflection

<h1>About HSTempo</h1>

<div class="card">
    <div class="card-body">
        @programName @version
        by @author
    </div>
</div>

<div class="card">
<div class="card-body">
<h2>Compatibility Notes</h2>
<ul>
<li>This may not work well under <a href="https://www.mozilla.org/en-US/firefox/mobile/">Firefox on Android</a> for some reason. Tapping to the beat may provide inconsistent outcome. Works on Chrome more reliably.</li>
</ul>
</div>
</div>

<div class="card">
    <div class="card-body">
        <ul>
            <li>
                <a href="https://www.hidekisaito.com">Website</a>
